    <div class="container" id="skillsPage">
      
      <!--h3>Search results for volunteers with skill:  "{{this.skillname}}"</h3--><br>
      <div class ="container" id="skilled-vol-results">
      {{#if volunteer}}
	<ul style="list-style: none;">
          <li><h3><b><u>Volunteer Name</u></b></h3></li>
	{{#each volunteer}}
	  <li><h5>
            <form id="get_volunteer_info{{this.vid}}" method="GET" action="/select-volunteer-info">
	    <input type="hidden" form="get_volunteer_info{{this.vid}}" id="get_vol_info_id{{this.vid}}" name="vid" value="{{this.vid}}"/>
    	    <input class="getInfo" type="submit" form="get_volunteer_info{{this.vid}}" id="get_vol_info_submit{{this.vid}}" value="{{this.firstname}} {{this.lastname}}"/>
	    </form>
	  </h5></li>
	{{/each}}
      {{else}}
      No volunteers currently in the database. Our app has failed society.<br>
      {{/if}}		
      </div>
    
     <br><br><br>

     <!-- Services -->
